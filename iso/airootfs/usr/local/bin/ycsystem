#!/bin/bash

# __   __    _   _ _   _ ___  __
# \ \ / /__ | | | | \ | (_) \/ /
#  \ V / _ \| | | |  \| | |\  / 
#   | | (_) | |_| | |\  | |/  \ 
#   |_|\___/ \___/|_| \_|_/_/\_\
#
# Lisence GPL3
# Homepage: https://github.com/apapamarkou/younix
# Author: Andrianos Papamarkou
# Email: papamarkoua@gmail.com

#
# YoUNiX System Mainenance
#

SCRIPT_NAME=$(basename "$0")
TITLE="System Mainenance"

show_help() {
    echo "$DISTRO_NAME $TITLE"
    echo "Usage: $SCRIPT_NAME [OPTIONS]"
    echo "Options:"
    echo "  -t    Open in terminal"
    echo "  -h    Show this help"
}

open_terminal() {
    nohup flock -n $LOCK_DIR/$SCRIPT_NAME.lock terminal --columns=55 --lines=17 --title="$FLOATING_PREFIX $TITLE" $SCRIPT_NAME && $RETURN_FOCUS_COMMAND
}

runInTerminal() {
    flock -n $LOCK_DIR/ycsystem-worker.lock terminal --columns=120 --lines=25 --title="$FLOATING_PREFIX $TITLE" $1;
}

display_menu() {
    while true; do
        yprint -c --color=yellow "$DISTRO_NAME $TITLE"

        # relative fzf height by terminal height
        height=$(($(tput lines) - 1))

        choice=$(echo -e "󱫐  Time Machine\n󰥞  Backup home\n󰚰  Update System\n󱣡  System Malware Shield\n󰿞  Clean Unused Packages\n  Inspect & Free Space\n  Boot Options\n󰁨  Fix Keyring\n$EXIT_TEXT" | fzf --layout=reverse --prompt="  Maintenance > " --height=$height)
        
        case "$choice" in
            *Backup*) ybackup -t;;
            *Machine*) 
                ytimemachine -t
                ;;
            *Update*) ysystemupdate -e;;
            *Clean*) runInTerminal clean-orphaned ;;
            *Keyring*) runInTerminal fix-keyring ;;
            *Space*) runInTerminal diskspace ;;
            *Boot*) ycgrub -e;;
            *Malware*) runInTerminal update-shield ;;
            *) break ;;
        esac
    done
}

OPEN_TERMINAL=false
EXIT_TEXT="󰈆  Exit"

while getopts "eth" opt; do
    case $opt in
        e) EXIT_TEXT="󰌍  Back" ;;
        t) OPEN_TERMINAL=true ;;
        h) show_help; exit 0 ;;
        \?) echo "Invalid option. Use -h for help."; exit 1 ;;
    esac
done

if [ "$OPEN_TERMINAL" = true ]; then
    open_terminal
    exit 0
fi

display_menu