#!/bin/bash

# __   __    _   _ _   _ ___  __
# \ \ / /__ | | | | \ | (_) \/ /
#  \ V / _ \| | | |  \| | |\  / 
#   | | (_) | |_| | |\  | |/  \ 
#   |_|\___/ \___/|_| \_|_/_/\_\
#
# Lisence GPL3
# Homepage: https://github.com/apapamarkou/younix
# Author: Andrianos Papamarkou
# Email: papamarkoua@gmail.com

#
# YoUNiX Configure Timezone
#

MUTE_NOTIFY=false
MUTE_ECHO=false
SCRIPT_NAME=$(basename "$0")
TITLE="Configure Timezone"

showHelp() {
    echo "$DISTRO_NAME $TITLE"
    echo "Usage: $SCRIPT_NAME [OPTIONS]"
    echo "Options:"
    echo "  -t           Open in terminal"
    echo "  -s TIMEZONE  Set timezone"
    echo "  -h           Show this help"
    echo "  -n           Mute notification"
    echo "  -v           Mute console message"
    exit 0
}

openTerminal() {
    local args=""
    [ "$MUTE_NOTIFY" = true ] && args="$args -n"
    [ "$MUTE_ECHO" = true ] && args="$args -v"
    nohup flock -n $LOCK_DIR/$SCRIPT_NAME.lock terminal --columns=50 --lines=15 --title="$FLOATING_PREFIX $TITLE" $SCRIPT_NAME $args > /dev/null 2>&1 &
}

printMessage() {
    if [ "$MUTE_NOTIFY" = false ]; then
        notify-send "Timezone Changed" "Timezone set to $1"
    fi
    if [ "$MUTE_ECHO" = false ]; then
        echo -e "Timezone Changed\nTimezone set to $1"
    fi
}

change() {
    local timezone="$1"
    sudo timedatectl set-timezone "$timezone"
    printMessage "$timezone"
}

displayMenu() {
    while true; do
        yprint -c --color=yellow "$DISTRO_NAME $TITLE"
        
        # Get current timezone
        current=$(timedatectl show --property=Timezone --value)
        yprint -c --color=green "Current timezone: $current"

        # relative fzf height by terminal height
        height=$(($(tput lines) - 2))
        
        # List available timezones and let user select
        timezone=$(printf "$EXIT_TEXT\n$(timedatectl list-timezones)" | fzf --layout=reverse --height=$height --prompt="  Select Timezone > ")
        
        [ -z "$timezone" ] && exit 0
        
        [[ "$timezone" = "$EXIT_TEXT" ]] && exit 0

        change "$timezone"
    done
}

OPEN_TERMINAL=false
SET_TIMEZONE=""
EXIT_TEXT="󰈆  Exit"

while getopts "ethnvs:" opt; do
    case $opt in
        e) EXIT_TEXT="󰌍  Back" ;;
        t) OPEN_TERMINAL=true ;;
        h) showHelp ;;
        n) MUTE_NOTIFY=true ;;
        v) MUTE_ECHO=true ;;
        s) SET_TIMEZONE="$OPTARG" ;;
        \?) echo "Invalid option. Use -h for help."; exit 1 ;;
    esac
done

if [ -n "$SET_TIMEZONE" ]; then
    change "$SET_TIMEZONE"
    exit 0
fi

if [ "$OPEN_TERMINAL" = true ]; then
    openTerminal
    exit 0
fi

displayMenu